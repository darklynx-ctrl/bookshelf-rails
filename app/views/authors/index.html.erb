<div class="row mb-3">
  <div class="col-12">
    <h1 class="m-0">Автори</h1>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Список авторів</h3>
        <div class="card-tools">
          <%= link_to books_path, class: 'btn btn-secondary btn-sm' do %>
            <i class="fas fa-arrow-left"></i> До книг
          <% end %>
        </div>
      </div>
      <div class="card-body p-0">
        <div class="row p-3">
          <% @authors.each do |author| %>
            <div class="col-md-6 mb-3">
              <div class="card <%= author.active ? 'card-success' : 'card-secondary' %> card-outline">
                <div class="card-header">
                  <h3 class="card-title">
                    <%= link_to author.name, author_path(author), class: 'text-dark' %>
                  </h3>
                  <div class="card-tools">
                    <% unless author.active %>
                      <span class="badge badge-secondary">Неактивний</span>
                    <% else %>
                      <span class="badge badge-success">Активний</span>
                    <% end %>
                  </div>
                </div>
                <div class="card-body">
                  <p class="text-muted"><%= truncate(author.bio, length: 150) %></p>
                  <p class="mb-2">
                    <strong>Книг:</strong> 
                    <span class="badge badge-primary"><%= author.books.count %></span>
                  </p>
                  
                  <% if author.books.any? %>
                    <ul class="list-unstyled">
                      <% author.books.limit(3).each do |book| %>
                        <li>
                          <i class="fas fa-book text-muted"></i>
                          <%= link_to book.title, book_path(book) %> 
                          <small class="text-muted">(<%= book.year %>)</small>
                        </li>
                      <% end %>
                      <% if author.books.count > 3 %>
                        <li class="text-muted">
                          <small>... та ще <%= author.books.count - 3 %></small>
                        </li>
                      <% end %>
                    </ul>
                  <% else %>
                    <p class="text-muted"><em>Немає книг</em></p>
                  <% end %>
                </div>
                <div class="card-footer">
                  <%= link_to author_path(author), class: 'btn btn-primary btn-sm' do %>
                    <i class="fas fa-eye"></i> Детальніше
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
