<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Бібліотека книг</h1>
    <%= link_to 'Додати нову книгу', new_book_path, class: 'btn btn-primary' %>
  </div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <% if @books.empty? %>
    <div class="alert alert-info">
      Поки що немає жодної книги. <%= link_to 'Додайте першу!', new_book_path %>
    </div>
  <% else %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Назва</th>
          <th>Автор</th>
          <th>Рік видання</th>
          <th>Дії</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.author %></td>
            <td><%= book.year %></td>
            <td>
              <%= link_to 'Переглянути', book_path(book), class: 'btn btn-sm btn-info' %>
              <%= link_to 'Редагувати', edit_book_path(book), class: 'btn btn-sm btn-warning' %>
              <%= button_to 'Видалити', book_path(book), 
                  method: :delete, 
                  data: { confirm: 'Ви впевнені?' }, 
                  class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
